global
    log /dev/log local0
    log 127.0.0.1 local1
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

frontend http_front
    bind *:80
    default_backend webservers

frontend https_front
        bind *:443 ssl crt /etc/haproxy/certs/www.yonasdejene.tech.pem
        mode http
        option forwardfor
        http-request add-header X-Forwarded-Proto https

        acl is_root path /
        use_backend webservers if is_root
        default_backend webservers

backend webservers
    balance roundrobin
    server 6937-web-01 98.93.235.93:80 check
    server 6937-web-02 44.204.82.47:80 check